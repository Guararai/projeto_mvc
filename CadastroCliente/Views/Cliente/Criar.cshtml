@{
    ViewData["Title"] = "Insere Cliente";
}

<h1>INSERIR NOVO CLIENTE</h1>
<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Nome</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Fulano Beltrano Siclano da Silva">
        </div><br />
        <div class="form-group col-md-6">
            <label for="inputPassword4">Email</label>
            <input type="text" class="form-control" id="inputPassword4" placeholder="email@email.com">
        </div><br />
    </div>
    <div class="form-group">
        <label for="inputAddress">Telefone</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="(99) 99999-9999">
    </div><br />
    <br />
 
</form>

<a asp-controller="Cliente" asp-action="" role="button" class="btn btn-danger">Voltar</a>
<button type="submit" class="btn btn-primary">Salvar</button>
